<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1F3B"
    tools:context=".QuoteActivity">


    <TextView
        android:id="@+id/quoteText"
        android:layout_width="414dp"
        android:layout_height="255dp"
        android:layout_marginTop="52dp"
        android:background="#8A031419"
        android:fontFamily="@font/andada"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="#16A690"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="129dp"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="188dp"
        android:contentDescription="Next Quote"
        android:fontFamily="@font/andada"
        android:text="Next"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteText"
        app:rippleColor="#2CA029" />

    <Button
        android:id="@+id/previousButton"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="44dp"
        android:contentDescription="Previous Quote"
        android:fontFamily="@font/andada"
        android:text="Previous"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteText"
        app:rippleColor="#CD1D1D" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="Share Quote"
        android:fontFamily="@font/andada"
        android:text="Share"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="77dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:text="Quotes :-"
        android:textColor="#2ABBBB"
        android:textSize="60sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
