<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#021535"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="390dp"
        android:layout_height="145dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/alex_brush"
        android:text="Hear Some good thoughts"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <FrameLayout
                android:id="@+id/frameLife"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewLife"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drc2" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameMotivational"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewMotivational"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drcm5" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameInspirational"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewInspirational"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drci" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameLove"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewLove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drcl" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameSuccess"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewSuccess"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drcs" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameHappiness"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewHappiness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drch" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameMindfulness"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageViewMindfulness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/drcmin" />


            </FrameLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
